{
  "name": "QuestMaster Pro: Lua devcontainer",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "customizations": {
    "vscode": {
      "extensions": [
        "sumneko.lua",
        "ms-vscode.cpptools"
      ]
    }
  },
  "features": {},
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y lua5.1 luarocks && export PATH=\"$HOME/.luarocks/bin:$PATH\" && luarocks --local install luacheck 1.2.0 || luarocks install luacheck",
  "remoteUser": "vscode"
}
{
  "name": "AzerothPilot: Lua devcontainer",
  "build": { "dockerfile": "Dockerfile" },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "sumneko.lua",
        "editorconfig.editorconfig"
      ]
    }
  },
  "postCreateCommand": "luacheck --version || true",
  "remoteUser": "vscode"
}
